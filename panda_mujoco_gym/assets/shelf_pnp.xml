<mujoco model="panda scene">
    <compiler angle="radian" meshdir="./meshes/" autolimits="true"/>
  
    <option integrator="Euler" noslip_iterations="3" timestep="0.002" cone="pyramidal">
      <flag multiccd="enable" warmstart="enable"/>
    </option>
    
    <!-- Panda base fixed on the table top center -->
    <include file="panda_mocap.xml" pos="0.6 0 0.3"/>
  
    <statistic center="0.3 0 0.4" extent="1"/>
  
    <visual>
      <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
      <rgba haze="0.15 0.25 0.35 1"/>
      <global azimuth="120" elevation="-20"/>
    </visual>
  
    <asset>
      <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
      <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
      <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    </asset>
  
    <worldbody>
      <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
      <camera name="watching" pos="1.669 -1.154 1.019" xyaxes="0.644 0.765 0.000 -0.250 0.210 0.945"/>

      <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

      <!-- table -->
      <body name="table" pos="0.7 0 0">
        <!-- 4 legs，z=0.2，xy is 0.27 and 0.47 -->
        <geom name="table_leg1" type="box" size="0.03 0.03 0.15" pos="0.27 0.27 0.15" rgba="0.5 0.3 0.2 1"/>
        <geom name="table_leg2" type="box" size="0.03 0.03 0.15" pos="-0.27 0.27 0.15" rgba="0.5 0.3 0.2 1"/>
        <geom name="table_leg3" type="box" size="0.03 0.03 0.15" pos="0.27 -0.27 0.15" rgba="0.5 0.3 0.2 1"/>
        <geom name="table_leg4" type="box" size="0.03 0.03 0.15" pos="-0.27 -0.27 0.15" rgba="0.5 0.3 0.2 1"/>
        <!-- table top，z=0.4+0.02=0.42 -->
        <geom name="table_top" type="box" size="0.3 0.3 0.02" pos="0 0 0.28" rgba="0.8 0.6 0.4 1"/>
      </body>

      <!-- shelf on the ground -->
      <body name="shelf" pos="1.4 0 0">
        <!-- shelf legs -->
        <geom name="shelf_leg1" type="box" size="0.02 0.02 0.505" pos="0.13 0.48 0.505" rgba="0.5 0.5 0.5 1"/>
        <geom name="shelf_leg2" type="box" size="0.02 0.02 0.505" pos="-0.13 0.48 0.505" rgba="0.5 0.5 0.5 1"/>
        <geom name="shelf_leg3" type="box" size="0.02 0.02 0.505" pos="0.13 -0.48 0.505" rgba="0.5 0.5 0.5 1"/>
        <geom name="shelf_leg4" type="box" size="0.02 0.02 0.505" pos="-0.13 -0.48 0.505" rgba="0.5 0.5 0.5 1"/>
        <!-- three boards -->
        <geom name="shelf_board1" type="box" size="0.15 0.5 0.01" pos="0 0 0.4" rgba="0.5 0.5 0.5 1"/>
        <geom name="shelf_board2" type="box" size="0.15 0.5 0.01" pos="0 0 0.7" rgba="0.5 0.5 0.5 1"/>
        <geom name="shelf_board3" type="box" size="0.15 0.5 0.01" pos="0 0 1.0" rgba="0.5 0.5 0.5 1"/>
      </body>

      <!-- three target sites -->
      <site name="target_sphere" pos="0.85 -0.1 0.3" size="0.02 0.02 0.02" rgba="1 0 0 1" type="sphere"/>
      <site name="target_cube" pos="0.85 0 0.3" size="0.02 0.02 0.02" rgba="0 0 1 1" type="sphere"/>
      <site name="target_cylinder" pos="0.85 0.1 0.3" size="0.02 0.02 0.02" rgba="0 1 0 1" type="sphere"/>

      <!-- sphere on the top shelf, left side -->
      <body name="sphere" pos="1.4 0.0 1.03">
        <joint type="free" name="sphere_joint"/>
        <geom name="sphere_geom" type="sphere" size="0.02" rgba="0.8 0.2 0.2 1"/>
        <site name="sphere_site" pos="0 0 0" size="0.01" type="sphere"/>
      </body>
      <!-- cube on the middle shelf, right side -->
      <body name="cube" pos="1.4 0.0 0.73">
        <joint type="free" name="cube_joint"/>
        <geom name="cube_geom" type="box" size="0.02 0.02 0.02" rgba="0.2 0.6 0.8 1"/>
        <site name="cube_site" pos="0 0 0" size="0.01" type="sphere"/>
      </body>
      <!-- cylinder on the bottom shelf, center -->
      <body name="cylinder" pos="1.4 0.0 0.43">
        <joint type="free" name="cylinder_joint"/>
        <geom name="cylinder_geom" type="cylinder" size="0.02 0.02" rgba="0.2 0.8 0.2 1"/>
        <site name="cylinder_site" pos="0 0 0.02" size="0.01" type="sphere"/>
      </body>

      <!-- dummy object for compatibility -->
      <body name="dummy_obj" pos="0 0 0.2">
          <joint type="free" name="obj_joint"/>
          <geom name="dummy_geom" type="sphere" size="0.001" pos="0 0 0" rgba="0 0 0 0"/>
      </body>
  
    </worldbody>
    
  </mujoco>
  